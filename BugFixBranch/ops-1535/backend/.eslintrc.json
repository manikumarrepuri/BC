{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", 2],
    "linebreak-style": ["off", "windows"],
    "quotes": ["off", "double"],
    "semi": ["warn", "always"],
    "no-unused-vars": ["warn", {"vars" : "local", "args" : "after-used"}],
    "no-console": "warn"
  }
}
